{
  "name": "apollo-link-network-error",
  "version": "0.0.4",
  "description": "An Apollo Link that you can dynamic ignore/change the network error.",
  "main": "./lib/index.js",
  "jsnext:main": "./lib/index.js",
  "typings": "./lib/index.d.ts",
  "private": false,
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "peerDependencies": {
    "graphql": "0.11.7 || ^0.12.0 || ^0.13.0 || ^14.0.0"
  },
  "scripts": {
    "dev": "tsc -p . -w",
    "build": "tsc -p .",
    "bundle": "rollup -c",
    "commit": "git-cz",
    "clean": "rimraf lib/*",
    "prebuild": "npm run clean",
    "postbuild": "npm run bundle",
    "prepublish": "npm run clean && npm run build",
    "test": "jest"
  },
  "keywords": [
    "apollo",
    "apollo-link",
    "offline",
    "network",
    "error",
    "ignore"
  ],
  "author": "hollyoops <haoer715@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hollyoops/apollo-link-network-error.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@apollo/client": "^3.8.4",
    "@types/jest": "^29.5.4",
    "git-cz": "^4.9.0",
    "graphql": "^16.8.0",
    "jest": "^29.6.4",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.1",
    "rollup": "^3.29.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.35.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*)\\.(test|spec)\\.[jt]sx?$",
    "timers": "fake",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "coverageReporters": [
      "text",
      "lcov"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/testUtils/*",
      "!src/index.ts"
    ]
  }
}
